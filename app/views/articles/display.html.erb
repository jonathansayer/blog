<%= @article.title %>
</br>
<%= form_for(:article, url: articles_update_path(:id => @article.id, :title => @article.title)) do |a| %>
<%= a.text_area :body, :placeholder => @article.body, :class => 'article_body' %>
<%= a.submit 'Save Article' %>
<%= link_to 'Edit Article', articles_edit_path(id: @article.id), id: "edit_" + @article.title %>
<% end %>
